{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "checkJs": true,
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "lib": ["esnext", "dom"],
    "declaration": true,
    "declarationDir": "dist",
    "baseUrl": ".",
    "paths": {
      "*": ["target/types/*"]
    }
  },
  "include": [
    "src/**/*.js",
    "src/**/*.mjs",
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.jsx"
  ],
  "exclude": ["node_modules"]
}
